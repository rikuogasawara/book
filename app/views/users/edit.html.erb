<div class='container'>
<div class='row'>
<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h2>User info</h2>
<%= form_with model: @user do |f| %>

<tr>
<div class="form-group">
<label for="inputName">Name</label></br>
<%= f.text_field :name, autofocus: true, id:"Name"%>
</div>

<div class="form-group">
<label for="inputImage">Image</label></br>
<%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
</div>

<div class="form-group">
<label for="Introduction">Introduction</label></br>
<%= f.text_area :introduction, autofocus: true, id:"Introduction"%>
</div>
<%= f.submit "Update User" %>
<% end %>
</tr>
<%= flash[:notice] %>
<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <%= render 'users/user', user: @user %>
      <h2>New book</h2>
      <%= render 'books/book', book: @book %>
    </div>
    <div class="col-xs-9">
      <h2>Books</h2>
      <table class="table table-user-show">
       <thead>
<tr>
<th></th>
<th>Title</th>
<th>Opinion<th>
<th colspan="3"></th>
<% @books.each do |book| %>
<tbody>

<td>
<%= link_to user_path(book.user_id) do %>
<%= image_tag book.user.get_profile_image(100,100) %>
<% end %>
</td>

<td>
<%= link_to book.title, book %>
</td>

<td><%= book.body %></td>
</tr>
<% end %>
</thead>
</tbody>
</table>

</div>
</div>
</div>
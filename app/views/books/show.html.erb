<%= flash[:notice] %>
<div class="container">
<%= render 'error',book: @book %>
  <div class="row">
    <div class="col-md-3 mt-5">
      <%= render 'users/info',user: @user %>

       <div class="row">
        <% if @user.id == current_user.id %>
          <%= link_to  edit_user_path(current_user),class:"btn btn-outline-secondary btn-block" do %>
          <i class="fas fa-user-cog"></i>
          <% end %>
          <% else %>
          <%= link_to  user_path(current_user),class:"btn btn-outline-secondary btn-block"  do %>
          <i class="fas fa-user-cog"></i>
          <% end %>
        <% end %>
      </div>
     <%= render 'newbook',book: @newbook %>
    </div>
    <div class="col-xs-9">
      <h1>Book detail</h1>
      <table class="table table-user-show">
        <tr>
          <td><%= link_to user_path(@user.id) do %>
                  <%= image_tag @user.get_profile_image(80,80) %>
                  <br><%= @user.name %>
              <% end %>
              </td>
              <td><%= link_to @book.title, book_path(@book.id) %></td>
              <td><%= @book.body %></td>
              <% if @user.id == current_user.id %>
              <td><%= link_to "Edit", edit_book_path(@book.id),class:"btn btn-success btn-block" %></td>
              <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？",class:"btn btn-danger btn-block" %></td>
              <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>
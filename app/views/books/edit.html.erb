<div class="row">
  <div class="col-md-5 mx-auto mt-5">
    <h1>Editing Book</h1>
    <% if @book.errors.any? %>
    <h3 class="text-danger"><%= @book.errors.count %> errors occured</h3>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li class="text-danger"><%= message %></li>
        <% end %>
      </ul>
    <% end %>

      <%= form_with model: @book,url: book_path(@book.id),method: :patch do |f| %>
          <div class="field">
            <%= f.label :title ,"Title" %><br>
            <%= f.text_field :title ,class:"form-control" %>
          </div>
          <div class="field">
            <%= f.label :body,"Opinion" %><br>
            <%= f.text_area :body ,class:"form-control"%>
          </div>
          <%= f.submit 'Update Book',class:"btn btn-success btn-block mt-3"  %>
      <% end %>
      <div class="row">
        <div class="pager my-4 mx-auto">
          <%= link_to "Show" ,book_path(@book.id) %> |
          <%= link_to "Back" ,books_path %>
          </div>
      </div>
    </div>
  </div>
</div>
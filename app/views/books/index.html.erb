<div class="container">
  <%= render 'error',book: @book %>
  <div class="row">
    <div class="col-md-3 mt-5">

      <%= render 'users/info',user: current_user %>

      <div class="row">
        <%= link_to  edit_user_path(current_user),class:"btn btn-outline-secondary btn-block" do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
      </div>

      <%= render 'newbook',book: @book %>

    </div>
     <div class="col-md-8 offset-md-1 mt-5">
      <h2>Books</h2>
        <table class="table table-books table-hover table-inverse">
        <thead>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
               <td><%= link_to image_tag(book.user.get_profile_image(80,80)),user_path(book.user_id) %></td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>